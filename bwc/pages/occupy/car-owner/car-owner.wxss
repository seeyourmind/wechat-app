/* pages/occupy/car-owner/car-owner.wxss */
@import "/pages/parking-fee/parking-fee.wxss";

.car-owner-msg-view {
  display: flex;
  flex-direction: column;
  border: 1rpx solid #bfbfbf;
  border-radius: 20rpx;
  width: 60%;
  font-size: 0.9rem;
  padding: 10rpx 30rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 50rpx;
}

.msg-title {
  font-size: 2rem;
  color: #11ad19;
  text-align: center;
  border-bottom: 1rpx solid #bfbfbf;
}

.msg-group {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.msg-group i {
  font-size: 1.1rem;
}