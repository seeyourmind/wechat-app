/* pages/occupy/occupy.wxss */
@import "/pages/parking-fee/parking-fee.wxss";

.title-view-login {
  display: flex;
  flex-direction: column;
  width: 70%;
  border: 1rpx solid #bfbfbf;
  border-radius: 20rpx;
  padding: 20rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
}

.title-icon-login {
  font-size: 1.5rem;
  color: #11ad19;
}

.form-view {
  font-size: 0.9rem;
  margin-top: 50rpx;
}

.label-icon {
  font-size: 1.3rem;
  margin: 0 20rpx;
}

.form-view input {
  border: 1rpx solid #bfbfbf;
  border-radius: 20rpx;
  margin: 10rpx 20rpx;
  padding: 15rpx;
}

.submit-button {
  width: 90%;
  position: fixed;
  bottom: 20rpx;
  left: 5%;
}

.car-owner-msg-view {
  display: flex;
  flex-direction: column;
  border: 1rpx solid #bfbfbf;
  border-radius: 20rpx;
  width: 60%;
  font-size: 0.9rem;
  padding: 10rpx 30rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 50rpx;
}

.msg-title {
  font-size: 2rem;
  color: #11ad19;
  text-align: center;
  border-bottom: 1rpx solid #bfbfbf;
}

.msg-group {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.msg-group i {
  font-size: 1.1rem;
}

.number-plate-input {
  border: 3rpx solid #bfbfbf;
  border-radius: 20rpx;
  padding: 10rpx 0;
  width: 90%;
  height: 90rpx;
  font-size: 1.3rem;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}