/* pages/parking-fee/parking-fee.wxss */
.entrance-right {
  text-align: right;
  z-index: 999;
  position: fixed;
  top: 10rpx;
  right: 0rpx;
  padding: 5rpx;
  width: 70rpx;
  font-size: 0.8rem;
  color: white;
  border-radius: 20rpx 0 0 20rpx;
  box-shadow: 5rpx 5rpx 15rpx #11ad19; 
  background-color: #11ad19;
}

.payment-view {
  width: 70%;
  margin: 100rpx auto 0 auto;
  text-align: center;
  background: #e6e6e6;
  padding: 20rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}
.payment-view view {
  display: flex;
  flex-direction: row;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10rpx;
  font-size: 1.5rem;
}

.order-detail-view {
  width: 70%;
  margin: 80rpx auto 0 auto;
  text-align: left;
  background: white;
  padding: 20rpx;
  border: 1rpx solid #e6e6e6;
  box-shadow: 2rpx 2rpx 10rpx #bfbfbf;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}
.order-detail-view label {
  margin-left: auto;
  margin-right: auto;
  color: #11ad19;
  font-size: 1.1rem;
}

.submit-button {
  width: 90%;
  position: fixed;
  bottom: 20rpx;
  left: 5%;
  color: white;
  background-color: #1296db;
}

.pay-warning {
  font-size: 0.9rem;
  width: 80%;
  color: #bfbfbf;
  text-align: center;
  position: fixed;
  bottom: 120rpx;
  left: 10%;
}

.yuanstyle {
  margin-top: 15rpx;
}