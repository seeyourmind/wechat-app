/* pages/parking-fee/parking-fee.wxss */
.title-view {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
}


.title-view view {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}

.title-icon {
  margin-top: auto;
  margin-bottom: auto;
  font-size: 1.5rem;
}

.warming-msg {
  font-size: 0.9rem;
  color: red;
}

.border-select {
  border-radius: 20rpx 0 0 20rpx;
  box-shadow: 0 0 15rpx #11ad19;
  margin: 0 20rpx;
}

.input-view {
  display: flex;
  flex-direction: row;
}

.number-plate-input {
  border: 3rpx solid #bfbfbf;
  border-radius: 20rpx 0 0 20rpx;
  padding: 10rpx 0;
  width: 90%;
  height: 90rpx;
  font-size: 1.3rem;
  margin-left: 20rpx;
  text-align: center;
}

.xiala-button {
  background-color: #11ad19;
  border-radius: 0 20rpx 20rpx 0;
  width: 10%;
  text-align: center;
  line-height: 110rpx;
  color: white;
  font-size: 1.1rem;
  margin-right: 20rpx;
}
.xiala-button:active {
  background-color: #147519;
}

.select-view {
  position: absolute;
  top: 260rpx;
  z-index: 1;
  overflow: hidden;
  width: 90%;
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx;
  background-color: #bfbfbf;
  margin: 0 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  animation: myfirst 0.5s;
  text-align: center;
}

.select-item {
  border-top: 1rpx solid #e6e6e6; 
  font-size: 1.2rem;
}

.payment-view {
  width: 70%;
  margin: 100rpx auto 0 auto;
  text-align: center;
  background: #e6e6e6;
  padding: 20rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.payment-view view {
  display: flex;
  flex-direction: row;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10rpx;
  font-size: 1.5rem;
}

.submit-button {
  width: 90%;
  position: fixed;
  bottom: 20rpx;
  left: 5%;
}

.pay-warning {
  font-size: 0.9rem;
  width: 80%;
  color: #bfbfbf;
  text-align: center;
  position: fixed;
  bottom: 150rpx;
  left: 10%;
}