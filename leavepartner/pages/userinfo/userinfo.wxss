/* pages/userinfo/userinfo.wxss */
page{
  background-color: #e8e8e8;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.view-display-row {
  display: flex;
  flex-direction: row;
}

.user-info{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 20rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  margin: 10rpx;
}
.user-info-text{
  margin: 10rpx;
  padding: 10rpx;
}
.user-info-hr{
  border: 1rpx solid #e8e8e8;
}
.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: auto;
  margin-bottom: 30rpx;
}

input{
  margin: 10rpx;
  padding: 10rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  width: 400rpx;
  height:50rpx;
  text-align: center;
}

.picker_input {
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  padding: 10rpx;
  text-align: center;
  width: 270rpx;
}