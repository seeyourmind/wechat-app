/* pages/register/register.wxss */
@import '../userinfo/userinfo.wxss';
page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: white;
  justify-content: center;
}
.choose-image-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  justify-content: center;
}
.choose-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-left: auto;
  margin-right: auto;
}
.choose-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.choose-button {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: auto;
  margin-right: auto;
  color: white;
  width: 50%;
}
.return-text {
  color: red;
  text-decoration: underline;
}
.return-text:hover {
  color: grey;
}