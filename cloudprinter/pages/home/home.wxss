/* home.wxss */

.home-title-view {
  display: flex;
  flex-direction: row;
  padding: 10rpx 0 30rpx 0;
  background-color: #47D2BD;
  color: #fff;
}

.home-userinfo {
  display: flex;
  flex-direction: column;
  width: 30%;
  text-align: center;
  margin-left: 30rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: auto;
}

.userinfo-nickname {
  font-weight: bold;
  margin: 20rpx 0 0 0;
}

.home-machine-state {
  width: 70%;
    display: flex;
    align-items: center;
    justify-content: center;
}


.home-page-view {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.home-column-view {
  display: flex;
  flex-direction: row;
  padding: 3%;
}

.home-button {
  display: block;
  margin: 0 3%;
  width: 33.333%;
  line-height: 1.2;
  padding-top: 10rpx;
  padding-bottom: 15rpx;
  text-align: center;
}
.home-button:active {
  color: #47D2BD;
}

.home-button-disable {
  visibility: hidden;
}

.home-button-icon {
  font-size: 100rpx;
}

.home-button-text {
  font-size: 30rpx;
}
