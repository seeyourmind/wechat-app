/* machine-status.wxss */
@import "../../manager/assign-for-agent/assign-for-agent.wxss";
@import "/wxSearch/wxSearch.wxss";

page {
  background-color: #e8e8e8;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.search-input {
  width: 90%;
  height: 30rpx;
  border-radius: 10rpx;
  background-color: white;
  text-align: center;
  padding: 10rpx;
  margin: 10rpx auto 0 auto;
}

.status-info {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 20rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  margin: 10rpx;
}

.status-info-text {
  margin: 10rpx;
  overflow: hidden;
}

.popupinput {
  display: flex;
  flex-direction: row;
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  width: 400rpx;
  height: 100rpx;
  margin: 30rpx auto 30rpx auto;
}

.wxSearch-button-me {
  font-size: 60rpx;
  padding: 5rpx;
  color: #47d2bd;
}

.wxSearch-button-me:active {
  color: #34aa92;
}

.input-tip{
  color:#808080;
  font-size: 30rpx;
}