/* journal-account.wxss */

.init {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  margin: 10rpx;
}

.init_title {
  display: flex;
  flex-direction: column;
  background-color: #47d2bd;
  color: white;
  font-weight: bold;
  border: 1rpx solid #47d2bd;
  border-radius: 10rpx 10rpx 0 0;
  padding: 10rpx;
  text-align: center;
}

.init_details {
  margin: 15rpx;
  display: flex;
  flex-direction: column;
}

.init_hr {
  border: 1px solid #e8e8e8;
}

.init_text {
  padding: 10rpx; 
}

.picker_block {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
}

.picker_input {
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  padding: 10rpx;
  text-align: center;
  width: 270rpx;
}

.picker_date {
  display: flex;
  flex-direction: column;
}

.picker_submit {
  display: flex;
  flex-direction: column;
  padding-bottom: 10rpx;
}

.picker_date_choose {
  font-size: 30rpx;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-top: 10rpx;
  color: #808080;
}

canvas {
  width: 100%;
  height: 300px;
  margin-left: 10rpx;
}
