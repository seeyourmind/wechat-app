/* file-manage.wxss */

page {
  background-color: #e8e8e8;
}

.head {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 110rpx;
  position: fixed;
  top: 0;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #bbb;
  background-color: #47d2bd;
  z-index: 10000;
}

.head-check {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 3%;
  color: #fff;
}

.head-check-button {
  position: absolute;
  right: 5%;
  font-size: 35rpx;
  color: #555;
}

.foot {
  width: 100%;
  position: fixed;
  bottom: 0;
}

.delete-button {
  width: 100%;
  color: #f00;
}

.print-button {
  width: 100%;
  color: #47d2bd;
}

.page {
  display: flex;
  flex-direction: column;
  margin-top: 120rpx;
  width: 100%;
  /* background-color: #333; */
  padding-top: 15rpx;
}

.page-cell {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 15rpx;
  padding: 10rpx;
}

.page-cell-icon {
  font-size: 60rpx;
  padding: 0 20rpx;
  color: #47d2bd;
}

.page-cell-info {
  display: flex;
  flex-direction: column;
}

.page-cell-info-text {
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #555;
}
