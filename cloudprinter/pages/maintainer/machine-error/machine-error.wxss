/* error-machine.wxss */

page {
  background-color: #e8e8e8;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.error-info {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  padding: 20rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  margin: 10rpx;
}

.error-info-text {
  margin: 10rpx;
}

.label-text {
  width: 40%;
  display: flex;
  flex-direction: column;
}

.content-text {
  width: 60%;
  display: flex;
  flex-direction: column;
  margin-left: -50rpx;
  margin-top: 0;
  margin-bottom: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
